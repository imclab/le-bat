!!! 5
html
	head
		title Login &#x266b; #{settings.sitename}
		link(rel='stylesheet', href='css/theme.min.css')
	body
		div#page-alert.page-alert
			- if(messages)
				for message in messages
					.alert.alert-error
						| #{message}


		div.container-fluid
			div.row-fluid

				.span4.offset4

					.tab-content

						.tab-pane.active#login
							.page-header
								h2 Login

							form#login_form(action="/login", method="post")
								label(for='username') Username
								input.input-block-level(type='text', name='username', placeholder='Your username')

								label(for='password') Password
								input.input-block-level(type='password', name='password', placeholder='Your password')

								p: div
									| Don't have an account? 
									a(href="#register", data-toggle="tab") Register

								.form-actions
									input.submit.btn.btn-primary(type='submit', value='Login')

						.tab-pane#register
							.page-header
								h2 Register

							form#register_form(action="/register", method="post", enctype="multipart/form-data")
								label(for='username') Username
								input.input-block-level(type='text', name='username', placeholder='Your username')

								label(for='password') Password
								input.input-block-level(type='password', name='password', placeholder='Your password')

								label(for='password_confirm') Confirm Password
								input.input-block-level(type='password', name='password_confirm', placeholder='Type it in a second time')

								p
									div: a(href="#login", data-toggle="tab") Back to login

								.form-actions
									input.submit.btn.btn-primary(type='submit', value='Register')

		script(src="js/libs/jquery/jquery-1.9.1.min.js")
		script(src="js/libs/bootstrap/bootstrap.min.js")
		script(src="js/libs/bootstrap/jasny-bootstrap.min.js")

		script
			$(function() {
				$('#forms a:first').tab('show');
			})